let currentIndex = 0;
let correctAnswers = 0;

// Mostrar la paraula actual
function showCurrentWord() {
  const word = paraules[currentIndex];
  const progress = ((currentIndex + 1) / paraules.length) * 100;
  
  document.getElementById('exercici').innerHTML = `
    <div class="paraula-container">
      <div>
        <span class="emoji">${word[2]}</span>
        <strong>${word[0]}</strong>
      </div>
      <div class="input-container">
        <input type="text" id="userAnswer" placeholder="Escriu en polonÃ¨s..." autocomplete="off">
        <button onclick="checkAnswer()">Comprova</button>
        <span class="audio-icon" onclick="playPronunciation('${word[3]}')">ğŸ”Š</span>
      </div>
      <div id="feedback"></div>
    </div>
  `;
  
  document.getElementById('progressBar').style.width = `${progress}%`;
  document.getElementById('counter').textContent = `${currentIndex + 1}/${paraules.length}`;
  
  // Permetre prÃ©mer Enter per comprovar
  document.getElementById('userAnswer').addEventListener('keypress', function(e) {
    if (e.key === 'Enter') {
      checkAnswer();
    }
  });
  
  // Enfocar l'input automÃ ticament
  document.getElementById('userAnswer').focus();
}

// Comprovar la resposta
function checkAnswer() {
  const userAnswer = document.getElementById('userAnswer').value.trim();
  const correctAnswer = paraules[currentIndex][1];
  const feedback = document.getElementById('feedback');
  
  if (!userAnswer) {
    feedback.innerHTML = `<div class="feedback incorrect">Si us plau, escriu una resposta</div>`;
    return;
  }
  
  if (userAnswer.toLowerCase() === correctAnswer.toLowerCase()) {
    feedback.innerHTML = `<div class="feedback correct">Correcte! ${getRandomCongrats()}</div>`;
    correctAnswers++;
    setTimeout(() => {
      nextWord();
    }, 1000);
  } else {
    feedback.innerHTML = `
      <div class="feedback incorrect">
        Incorrecte. La resposta correcta Ã©s: <strong>${correctAnswer}</strong><br>
        PronÃºncia: <em>${paraules[currentIndex][3]}</em>
      </div>
    `;
  }
}

// SegÃ¼ent paraula
function nextWord() {
  if (currentIndex < paraules.length - 1) {
    currentIndex++;
    showCurrentWord();
  } else {
    // Fi de l'exercici
    document.getElementById('exercici').innerHTML = `
      <div style="text-align: center; padding: 30px;">
        <h2>Exercici completat! ğŸ‰</h2>
        <p>Has encertat <strong>${correctAnswers}</strong> de <strong>${paraules.length}</strong> paraules.</p>
        <button onclick="resetExercise()">Tornar a comenÃ§ar</button>
      </div>
    `;
  }
}

// Paraula anterior
function prevWord() {
  if (currentIndex > 0) {
    currentIndex--;
    showCurrentWord();
  }
}

// Reproduir pronunciaciÃ³
function playPronunciation(pronunciation) {
  if ('speechSynthesis' in window) {
    const utterance = new SpeechSynthesisUtterance(paraules[currentIndex][1]);
    utterance.lang = 'pl-PL';
    speechSynthesis.speak(utterance);
  } else {
    alert("El teu navegador no suporta sÃ­ntesi de veu. Prova amb Chrome o Edge.");
  }
}

// Felicitacions aleatÃ²ries
function getRandomCongrats() {
  const congrats = ["Molt bÃ©! ğŸ‘", "Perfecte! ğŸ¯", "ExcelÂ·lent! ğŸŒŸ", "Ho has encertat! ğŸ’¯"];
  return congrats[Math.floor(Math.random() * congrats.length)];
}

// Reiniciar exercici
function resetExercise() {
  currentIndex = 0;
  correctAnswers = 0;
  showCurrentWord();
}

// Configurar botons
document.getElementById('prevBtn').addEventListener('click', prevWord);
document.getElementById('nextBtn').addEventListener('click', nextWord);

// Iniciar l'exercici
showCurrentWord();
</script>

